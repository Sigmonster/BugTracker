@model BugTracker.Models.Projects
@{
    ViewBag.Title = "Edit Project";
}
@{ 
    var statusSuccess = ViewData["MessageSuccess"];
    var statusFail = ViewData["MessageFail"];
}

<div class="col-md-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <strong>Edit Project</strong><br />
            Edit Name or Manage Users.
            <div class="pull-right"><a href="#" data-perform="panel-collapse"><i class="ti-minus"></i></a> </div>
            <br />
            <br />
        </div>
        <div class="panel-wrapper collapse in" aria-expanded="true">
            <div class="panel-body">
                <div class="col-md-6">
                    @using (Html.BeginForm("ProjectEdit", "Admin", new { Id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "EditProjectForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <div class="text-success">@statusSuccess</div>
                            <div class="text-danger">@statusFail</div>
                            <label class="control-label col-md-3" for="Name">Project Name:</label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Active:</label>
                                        <div class="col-md-5" style="padding-top: 6px;">
                                            @Html.CheckBoxFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <button type="submit" class="fcbtn btn btn-success btn-outline btn-1d" value="Submit"> Sumbit </button>



                    }
                </div>
                <div class="col-md-6">
                    <blockquote>
                        <label class="text-danger">Warning:</label> Setting a project to inactive, it will remove all users from the project.
                    </blockquote>
                    <br>
                    <blockquote>
                        When a new project is created it will intially be Inactive, once Active, a PM will need to assign users to the project.
                    </blockquote>
                </div>             
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="pull-left">
                    <a href="@Url.Action("Projects", "Admin")" class="fcbtn btn btn-info btn-outline btn-1d">Go to All Projects</a>
                </div>
                <div class="pull-right">
                    <a href="@Url.Action("EditProjectUsers", "BT", new { id = Model.Id })" class="fcbtn btn btn-info btn-outline btn-1d">Add/RM Users</a>
                </div>
            </div>
        </div>
    </div>
</div>


