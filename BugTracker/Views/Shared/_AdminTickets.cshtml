@using BugTracker.Models
@model AdminTicketsVM

<div class="col-md-11 center-block">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="pull-left">
                <strong>@Model.Title</strong><br />
            </div>
            <div class="pull-right ticket-box-header-btns"><a href="#" data-perform="panel-collapse"><i class="ti-plus" style="position: relative; bottom: 8px;"></i></a> </div>
            <br />
        </div>
        <div class="panel-wrapper collapse" aria-expanded="false">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped compact myDT">
                        <thead>
                            <tr class="ticket-tbl-row">
                                <th>#</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Type</th>
                                <th>Project</th>
                                <th>Title</th>
                                <th>Owner</th>
                                <th>Assigned</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody class="disp-tick-tbody display" cellspacing="0" width="100%">
                            @foreach (var item in Model.Tickets)
                            {
                                <tr class="ticket-tbl-row">
                                    <td>
                                        <a href="@Url.Action("Ticket","BT", new { Id = item.Id })">@item.Id</a>
                                    </td>
                                    <td>
                                        <div class="ticket-tbl-time">
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </div>
                                    </td>
                                    <td>
                                        <div class="ticket-tbl-time">
                                            @item.Updated
                                        </div>
                                    </td>
                                    <td>
                                        <span class="tk-status ticket-label status-@item.TicketStatusID">
                                            @item.TicketStatus.Name
                                        </span>
                                    </td>
                                    <td>
                                        <span class="tk-priority ticket-label priority-@item.TicketPriorityID">
                                            @item.TicketPriority.Name
                                        </span>
                                    </td>
                                    <td>
                                        <span class="tk-type ticket-label type-@item.TicketTypeID">
                                            @item.TicketType.Name
                                        </span>
                                    </td>
                                    <td>
                                        @item.Project.Name
                                    </td>


                                    <td>
                                        <div class="ticket-tbl-title admin-tbl-title">
                                            @item.Title
                                        </div>
                                    </td>
                                    <td>
                                        @item.OwnerUser.DisplayName
                                    </td>
                                    <td>
                                        @if (item.AssignedToUser != null)
                                        {
                                            @item.AssignedToUser.DisplayName
                                        }
                                        else
                                        {
                                            @:UnAssigned
                                        }
                                    </td>
                                    <td>
                                        <div class="ticket-tbl-body admin-tbl-body">
                                            @item.Description
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

