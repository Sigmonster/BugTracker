@model BugTracker.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "recoverform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group ">
        <div class="col-xs-12">
            <h3>Recover Password</h3>
            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="form-group ">
        <div class="col-xs-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
        </div>
    </div>
    <a href="javascript:void(0)" id="back-to-login" class="text-dark pull-right"><i class="fa fa-arrow-left m-r-5"></i> Back to login.</a>
}