@model IEnumerable<BugTracker.Models.Projects>
@{
    ViewBag.Title = "All Projects";
}

<div class="white-box col-xs-6">
    <div class="panel-heading">
        Projects
    </div>
    <p>
        @Html.ActionLink("Create New", "ProjectCreate")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "ProjectEdit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "ProjectDetails", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
