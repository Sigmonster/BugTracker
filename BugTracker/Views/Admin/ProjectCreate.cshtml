@model BugTracker.Models.Projects

@{
    ViewBag.Title = "Create Project";
}

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <div class="white-box">
            <div class="form-horizontal">
                <h4>Create a New Project</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="fcbtn btn btn-success btn-outline btn-1d" />
                    </div>
                </div>
            </div>
            <div class="row">
                <a href="@Url.Action("Projects","Admin")" class="fcbtn btn btn-info btn-outline btn-1d">Back To All Projects</a>
            </div>
        </div>
    }


