@using BugTracker.Models
@model AdminUserData
@{
    var AllUsers = (List<ApplicationUser>)ViewData["AllUsers"];

}

@{
    ViewBag.Title = "AdminUsersIndex";
}


<div class="col-md-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <strong>All Users</strong><br />
            Select a user to edit.
            <div class="pull-right"><a href="#" data-perform="panel-collapse"><i class="ti-minus"></i></a> </div>
            <br />
            <br />
        </div>
        <div class="panel-wrapper collapse in" aria-expanded="true">
            <div class="panel-body">
                <div class="col-xs-10 center-block">
                    <div class="table-responsive">
                        <table class="table table-striped hover compact myTablez">
                            <thead class="dt-head-right">
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Display Name</th>
                                    <th>Email</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody id="addProjectUserFormBody">
                                @foreach (var user in AllUsers)
                                {
                                    <tr>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.DisplayName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <a href="@Url.Action("EditUserRoles", "Admin", new { id = @user.Id })" class="fcbtn btn btn-info btn-outline btn-1d">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="pull-left">
                        <a href="@Url.Action("Projects", "Admin")" class="fcbtn btn btn-info btn-outline btn-1d">Go to All Projects</a>
                    </div>
                    <div class="pull-right">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
