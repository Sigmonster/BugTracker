@model BugTracker.Models.EditAccountViewModel
@{
    ViewBag.Title = "Account Settings";
}

<div class="white-box col-md-8 center-block">
    <h2>Edit Account.</h2>
    <hr />
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm("EditAccount", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserFirstName, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(m => m.UserFirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserLastName, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(m => m.UserLastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserDisplayName, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(m => m.UserDisplayName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="PhoneNumber">Phone Number</label>
                <div class="col-md-6">
                    @Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-8 col-md-10">
                    <input type="submit" value="Save" class="fcbtn btn btn-outline btn-success btn-1d" />
                </div>
            </div>
        }
    </div>
    <div class="clearfix"></div>
</div>
